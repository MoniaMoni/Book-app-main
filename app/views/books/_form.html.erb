<div class='conteiner'>
  <%= form_with(model: book, local: true) do |form| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <div class="field">
        <%= form.text_field :title, class:"form-control", placeholder:'Title' %>
      </div>
        <br>
      <div class="field">
        <%= form.text_field :author, class:"form-control", placeholder:'Author' %>
      </div>
        <br>
      <div class="field">
        <%= form.text_area :description, class:"form-control", placeholder:'Book description' %>
      </div>
      <div class="field">
        <%= form.text_field :year_of_publishment, class:"form-control", placeholder:'Year Of Publishment' %>
      </div>

      <div class="field">
        <%= form.label :edition %><br>
        <%= form.select(:edition, options_for_select([['Paper', 'Paper'], ['Ebook', 'Ebook'], ['Audiobook', 'Audiobook']])) %>
      </div>

      <div class="field">
        <%= form.label :genre %><br>
        <%= collection_select(:book, :genre_id, Genre.all, :id, :name, {}, { :multiple => false }) %>
      </div>

        <br>
<!--      <div class="field">-->
        <%#= form.number_field :user_id, id: :book_user_id, class:"form-control", value: current_user.id, type: :hidden %>
<!--      </div>-->
      <div class="field">
        <%#= form.select :user_ids, User::all, class:"form-control" %>
        <%#= form.number_field :users, class:"form-control", value: current_user, type: :hidden %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    </div>
  <% end %>
</div>