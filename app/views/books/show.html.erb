<p id="notice"><%= notice %></p>

<br>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h4 class="card-title"><strong><%= @book.title %></strong></h4>
    <h5 class="card-subtitle mb-2 text-muted"><%= @book.author %></h5>
    <p class="h6 card-text"><%= @book.description %></p>
    <p class="h6 card-text"><%= @book.year_of_publishment %></p>
    <p class="h6 card-text"><%= @book.edition %></p>
    <p class="h6 card-text"><%= @book.genre.name %></p>
    <a href="#" class="card-link"></a>
  </div>
</div>

<br>

<%= link_to 'Edit', edit_book_path(@book), class:"btn btn-outline-dark" %>
