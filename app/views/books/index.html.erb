<p id="notice"><%= notice %></p>

<h1>Read books</h1>

<p>report</p>
<div>
  <%= render_report 'my_reports2' %>
</div>

<br>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Year Of Publishment</th>
      <th>Genre</th>
      <th>Edition</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <% #if book.users == current_user %>
        <tr>
          <td><strong><%= link_to book.title, book %></strong></td>
          <td><%= book.author %></td>
          <td><%= book.description %></td>
          <td><%= book.year_of_publishment %></td>
          <td><%= book.genre.name %></td>
          <td><%= book.edition %></td>

          <!-- <td><%= link_to 'Show', book %></td> -->
          <td><%= link_to 'Edit', edit_book_path(book), class:"btn btn-outline-dark" %></td>
          <td><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-dark" %></td>
        </tr>
      <% #end %>
    <% end %>
  </tbody>
</table>

<p><%= sortable "title" %></p>
<p><%= sortable "author" %></p>

<%= link_to 'Add New Book', new_book_path, class:"btn btn-outline-dark" %>

