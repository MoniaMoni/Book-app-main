<h1>All books</h1>

<br>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Year Of Publishment</th>
      <th>Genre</th>
      <th>Edition</th>
    </tr>
  </thead>

  <tbody>
  <% @books.all.each do |book| %>
    <tr>
      <td><strong><%= link_to book.title, book %></strong></td>
      <td><%= book.author %></td>
      <td><%= book.description %></td>
      <td><%= book.year_of_publishment %></td>
      <td><%= book.genre.name %></td>
      <td><%= book.edition %></td>
    </tr>
  <% end %>
  </tbody>
</table>
